    <description>A Screen Flow to allow Anneli or other rev ops team member to manually trigger the Product Schedule (re-)calculations for a given Opp.</description>
    <environments>Default</environments>
    <formulas>
        <name>calcCurrYR1</name>
        <dataType>Currency</dataType>
        <expression>IF( 
{!Calculate_Revenue_from_Schedules.Term__c}=&quot;YR1&quot;,
{!Calculate_Revenue_from_Schedules.Revenue},
 0)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>calcCurrYR1withPrior</name>
        <dataType>Currency</dataType>
        <expression>IF({!varPriorDateDelta} &gt;= 12, 0, (
IF({!varPriorDateDelta}+{!varCurrDateDelta} &lt;= 12, {!varCurrTotalPrice},
({!varCurrTotalPrice}/{!Loop_through_all_OLIs_1.Product_Line_Months__c})*(12-{!varPriorDateDelta}) )))</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>calcCurrYR2</name>
        <dataType>Currency</dataType>
        <expression>IF( 
{!Calculate_Revenue_from_Schedules.Term__c}=&quot;YR2&quot;,
{!Calculate_Revenue_from_Schedules.Revenue},
 0)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>calcCurrYR2withPrior</name>
        <dataType>Currency</dataType>
        <expression>IF( ({!varPriorDateDelta} &gt;24) || ({!varPriorDateDelta}+{!varCurrDateDelta} &lt;= 12), 0,(
IF(({!varPriorDateDelta} &gt;12) &amp;&amp; ({!varCurrDateDelta} &lt;= 12), {!varCurrTotalPrice}, 
({!varCurrTotalPrice}/{!Loop_through_all_OLIs_1.Product_Line_Months__c})*12)
)
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>calcCurrYR3</name>
        <dataType>Currency</dataType>
        <expression>IF( 
{!Calculate_Revenue_from_Schedules.Term__c}=&quot;YR3&quot;,
{!Calculate_Revenue_from_Schedules.Revenue},
 0)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>calcCurrYR3withPrior</name>
        <dataType>Currency</dataType>
        <expression>IF( ({!varPriorDateDelta} &gt;36) || ({!varPriorDateDelta}+{!varCurrDateDelta} &lt;= 24), 0,(
IF(({!varPriorDateDelta} &gt;24) &amp;&amp; ({!varCurrDateDelta} &lt;= 24), {!varCurrTotalPrice}, 
({!varCurrTotalPrice}/{!Loop_through_all_OLIs_1.Product_Line_Months__c})*24)
)
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>calcCurrYR4</name>
        <dataType>Currency</dataType>
        <expression>IF( 
{!Calculate_Revenue_from_Schedules.Term__c}=&quot;YR4&quot;,
{!Calculate_Revenue_from_Schedules.Revenue},
 0)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>calcCurrYR4withPrior</name>
        <dataType>Currency</dataType>
        <expression>IF( ({!varPriorDateDelta} + {!varCurrDateDelta}) &gt;48, 0,
(IF ( ({!varPriorDateDelta} + {!varCurrDateDelta}) &gt; 36, {!varCurrTotalPrice}, 
0)
)
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>calcMaxEndDate</name>
        <dataType>Date</dataType>
        <expression>IF(
({!Loop_through_all_OLIs_2.End_Date__c}&gt;= {!varMaxEndDate} ||  ISNULL({!varMaxEndDate})),  {!Loop_through_all_OLIs_2.End_Date__c},{!varMaxEndDate} )</expression>
    </formulas>
    <formulas>
        <name>calcMinStartDate</name>
        <dataType>Date</dataType>
        <expression>IF(({!Loop_through_all_OLIs_2.ServiceDate} &lt;= {!varMinStartDate} || ISNULL({!varMinStartDate} )) , {!Loop_through_all_OLIs_2.ServiceDate},{!varMinStartDate} )</expression>
    </formulas>
    <formulas>
        <name>calcMoreSLIRev</name>
        <dataType>Currency</dataType>
