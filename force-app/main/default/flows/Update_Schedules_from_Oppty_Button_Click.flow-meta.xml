        <scale>0</scale>
    </formulas>
    <formulas>
        <name>calcResetCurrLoopCounter</name>
        <dataType>Number</dataType>
        <expression>IF({!varPriorProductID}={!Loop_through_all_OLIs_2.Product2Id},{!varCurrLoopCounter},0)</expression>
        <scale>0</scale>
