    <formulas>
        <name>CalcTerm</name>
        <dataType>String</dataType>
        <expression>IF( 
 ( {!Calculate_Revenue_from_Schedules.ScheduleDate}&gt;= ADDMONTHS({!varTermStartDate},-1) &amp;&amp; {!Calculate_Revenue_from_Schedules.ScheduleDate}&lt;= ADDMONTHS({!varTermStartDate},11)), 
&quot;YR1&quot;, 
IF( ( {!Calculate_Revenue_from_Schedules.ScheduleDate}&gt;= ADDMONTHS({!varTermStartDate} ,11) &amp;&amp; ADDMONTHS({!varTermStartDate},11) &lt;= ADDMONTHS({!varTermEndDate},1) &amp;&amp; 
{!Calculate_Revenue_from_Schedules.ScheduleDate}&lt; ADDMONTHS({!varTermStartDate},23) ), 
&quot;YR2&quot;, 
IF( 
( {!Calculate_Revenue_from_Schedules.ScheduleDate}&gt; ADDMONTHS({!varTermStartDate} ,23) &amp;&amp; ADDMONTHS({!varTermStartDate},23) &lt;= ADDMONTHS({!varTermEndDate},1) &amp;&amp; 
{!Calculate_Revenue_from_Schedules.ScheduleDate}&lt; ADDMONTHS({!varTermStartDate},35) ), 
&quot;YR3&quot;, 
IF( 
( {!Calculate_Revenue_from_Schedules.ScheduleDate}&gt; ADDMONTHS({!varTermStartDate} ,35) &amp;&amp; ADDMONTHS({!varTermStartDate},35) &lt;= ADDMONTHS({!varTermEndDate},1) &amp;&amp;
{!Calculate_Revenue_from_Schedules.ScheduleDate}&lt; ADDMONTHS({!varTermStartDate},47) ), 
&quot;YR4&quot;, 
&quot;n/a&quot;
)
)
)
)</expression>
    </formulas>
